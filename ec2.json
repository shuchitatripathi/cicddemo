{
   "AWSTemplateFormatVersion": "2010-09-09",
   "Description": "EC2",
   "Parameters" : {
     "TagValue": {
       "Description": "Value of Dept tag5",
       "Type": "String"
     }
   },
   "Resources": {
      "EC2Instance": {
         "Type": "AWS::EC2::Instance",
         "Properties": {
            "ImageId": "ami-0ce71448843cb18a1",
            "InstanceType": "t2.micro",
            "KeyName": "Shuchita_Ireland",
            "SubnetId": {
              "Fn::ImportValue": "PublicSubnetID"
            },
            "SecurityGroupIds": [{
              "Fn::ImportValue": "SecurityGroup"
            }],
            "Tags": [{
              "Key": "Dept",
              "Value": {"Ref": "TagValue"}
            }],
            "UserData": {
              "Fn::Base64": {
                "Fn::Join" : [
                  "", [
                    "#!/bin/bash\n",
                    "curl https://st-jenkinsbucket1.s3-ap-southeast-1.amazonaws.com/createuser.sh > ./createuser.sh\n",
                    "chmod 755 ./createuser.sh\n",
                    "exec ./createuser.sh"
                  ]
                ]
              }
            }
         }
      }
   },
   "Outputs": {
      "EC2IP": {
         "Description": "IP of EC2",
         "Value": {
            "Fn::GetAtt": [
               "EC2Instance",
               "PublicIp"
            ]
         },
         "Export": {
            "Name": "EC2IP"
         }
      }
   }
}
